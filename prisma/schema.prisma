generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_URL")
  shadowDatabaseUrl = env("PGURL")
}

model About {
  id          String @id
  title       String
  description String
}

model Account {
  id                       String  @id
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  refresh_token_expires_in Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  User                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Achievements {
  id          String @id
  title       String
  description String
}

model Education {
  id          String @id
  title       String
  description String
}

model Experience {
  id          String @id
  title       String
  description String
}

model Hobbies {
  id    String @id
  title String
}

model Product {
  id          String   @id
  name        String
  description String?
  image       String?
  price       Int
  stack       String[]
}

model Project {
  id          String   @id
  name        String
  description String?
  image       String?
  tags        String[]
  createdAt   DateTime @default(now())
  blurb       String?
  link        String?
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Skills {
  id    String @id
  title String
}

model Technologies {
  id          String @id
  title       String
  description String
  image       String
}

model User {
  id            String    @id
  name          String?
  bio           String?
  age           Int?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  Account       Account[]
  Session       Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  ADMIN
  USER
}
